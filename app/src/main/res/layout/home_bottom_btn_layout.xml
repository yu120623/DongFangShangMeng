<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/line" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <com.baseandroid.view.BottomButton
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:buttonImg="@drawable/home_btn"
            app:buttonText="主页"
            app:buttonTextColor="@color/bottom_btn_color" />

        <com.baseandroid.view.BottomButton
            android:id="@+id/exhibition_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:buttonImg="@drawable/exh_btn"
            app:buttonText="展会"
            app:buttonTextColor="@color/bottom_btn_color" />

        <com.baseandroid.view.BottomButton
            android:id="@+id/me_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:buttonImg="@drawable/profile_btn"
            app:buttonText="会员"
            app:buttonTextColor="@color/bottom_btn_color" />
    </LinearLayout>

</LinearLayout>